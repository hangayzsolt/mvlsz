@model Mvlsz.Site.Areas.Admin.Models.MatchViewModel

@{
    ViewBag.Title = "Új meccs felvitele";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("Create", "Home", FormMethod.Post, new {@class = "form-horizontal"}))
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new {@class = "text-danger"})
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @Html.DisplayNameFor(model => model.Place)
                @Html.EditorFor(model => model.Place, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.Place, "", new {@class = "text-danger"})

            </div>
            <div class="form-group">
                @Html.DisplayNameFor(model => model.DateTime)
                @Html.EditorFor(model => model.DateTime,
                    new
                    {
                        htmlAttributes = new
                        {
                            min = DateTime.Today.ToString("s"), max = new DateTime(2050, 01, 01),
                            @class = "form-control", type = "datetime-local"
                        }
                    })
                @Html.ValidationMessageFor(model => model.DateTime, "", new {@class = "text-danger"})
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(model => model.Division)
                @Html.EditorFor(model => model.Division, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.Division, "", new {@class = "text-danger"})
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(model => model.HomeTeam)
                @Html.EditorFor(model => model.HomeTeam, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.HomeTeam, "", new {@class = "text-danger"})
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(model => model.VisitorTeam)
                @Html.EditorFor(model => model.VisitorTeam, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.VisitorTeam, "", new {@class = "text-danger"})
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default"/>
            </div>
        }
    </div>
</div>

<div>
    @Html.ActionLink("Back to List", "Index", "Home")
</div>
